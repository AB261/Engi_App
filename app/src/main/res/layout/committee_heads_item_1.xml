<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <ImageView
        android:id="@+id/committee_heads_item_iv_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="@dimen/margin_normal"
        android:padding="@dimen/padding_normal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/committee_heads_item_ll_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/committee_heads_item_iv_image"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/committee_heads_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding_normal"
            android:gravity="end"
            android:padding="@dimen/padding_normal"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/committee_heads_item_tv_committee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/padding_small"
                android:textAlignment="textEnd" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:src="@drawable/ic_post" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/committee_heads_item_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/padding_small"
                android:textAlignment="textEnd" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:src="@drawable/ic_phone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/committee_heads_item_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/padding_small"
                android:textAlignment="textEnd" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:src="@drawable/ic_email" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>